</section>

<style>
	.education-section {
		background: var(--color-bg);
		position: relative;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-title {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-subtitle {
		font-size: 1.125rem;
		color: var(--color-text-secondary);
	}

	.education-content {
		max-width: 900px;
		margin: 0 auto;
	}

	.education-card {
		background: var(--color-bg-secondary);
		border: 1px solid var(--color-border);
		border-radius: 1rem;
		padding: 2.5rem;
		display: flex;
		gap: 2rem;
		align-items: flex-start;
		margin-bottom: 3rem;
		transition: var(--transition);
		animation: fadeInUp 0.6s ease-out;
	}

	.education-card:hover {
		border-color: var(--color-primary);
		transform: translateY(-5px);
		box-shadow: var(--shadow-hover);
	}

	.card-icon {
		width: 80px;
		height: 80px;
		min-width: 80px;
		border-radius: 1rem;
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
	}

	.card-content {
		flex: 1;
	}

	.degree-title {
		font-size: 1.75rem;
		margin-bottom: 0.75rem;
		color: var(--color-text);
	}

	.university {
		font-size: 1.25rem;
		color: var(--color-primary);
		font-weight: 600;
		margin-bottom: 0.75rem;
	}

	.details {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		flex-wrap: wrap;
		color: var(--color-text-secondary);
	}

	.separator {
		color: var(--color-text-secondary);
	}

	.certifications {
		animation: fadeInUp 0.6s ease-out 0.2s backwards;
	}

	.cert-heading {
		font-size: 1.5rem;
		margin-bottom: 1.5rem;
		color: var(--color-text);
		text-align: center;
	}

	.cert-card {
		background: var(--color-bg-secondary);
		border: 1px solid var(--color-border);
		border-radius: 1rem;
		padding: 2rem;
		display: flex;
		gap: 1.5rem;
		align-items: center;
		transition: var(--transition);
	}

	.cert-card:hover {
		border-color: var(--color-primary);
		transform: translateX(5px);
		box-shadow: 0 5px 20px rgba(59, 130, 246, 0.2);
	}

	.cert-icon {
		width: 64px;
		height: 64px;
		min-width: 64px;
		border-radius: 50%;
		background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-primary) 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
	}

	.cert-content h4 {
		font-size: 1.25rem;
		margin-bottom: 0.5rem;
		color: var(--color-text);
	}

	.issuer {
		color: var(--color-text-secondary);
		font-size: 1rem;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.section-title {
			font-size: 2rem;
		}

		.education-card {
			flex-direction: column;
			padding: 2rem;
		}

		.card-icon {
			width: 64px;
			height: 64px;
			min-width: 64px;
		}

		.degree-title {
			font-size: 1.5rem;
		}

		.university {
			font-size: 1.125rem;
		}

		.cert-card {
			flex-direction: column;
			text-align: center;
		}
	}
</style>

