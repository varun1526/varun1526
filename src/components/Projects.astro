---
const projects = [
	{
		title: "Pipeline As a Code",
		description: "Automated CI/CD pipeline synchronization using Python scripting to ensure consistency across projects. Built reusable Jenkins shared libraries to reduce duplication and improve pipeline maintainability.",
		image: "project1",
		tags: ["Python", "Jenkins", "CI/CD", "Automation"],
		github: "https://github.com/varun1526",
		live: null
	},
	{
		title: "Full Observability Stack",
		description: "Designed and implemented a complete observability platform from scratch with Prometheus, Grafana, Loki, and Tempo for end-to-end metrics, logs, and distributed tracing.",
		image: "project2",
		tags: ["Prometheus", "Grafana", "Loki", "Tempo", "OpenTelemetry"],
		github: "https://github.com/varun1526",
		live: null
	},
	{
		title: "Infrastructure as Code Platform",
		description: "Built comprehensive Terraform modules for AWS infrastructure management with automated security scanning and compliance checks, reducing vulnerabilities by 20%.",
		image: "project3",
		tags: ["Terraform", "AWS", "Security", "IaC"],
		github: "https://github.com/varun1526",
		live: null
	},
	{
		title: "Jenkins Master-Agent CI/CD",
		description: "Architected and deployed Jenkins master-slave infrastructure with optimized build pipelines using caching and multi-stage Dockerfiles to reduce build duration.",
		image: "project4",
		tags: ["Jenkins", "Docker", "AWS ECS", "CI/CD"],
		github: "https://github.com/varun1526",
		live: null
	},
	{
		title: "Observability Migration",
		description: "Led the migration of observability platform from New Relic to Datadog across 20+ microservices with zero downtime, improving monitoring capabilities and cost efficiency.",
		image: "project5",
		tags: ["Datadog", "New Relic", "Microservices", "Migration"],
		github: "https://github.com/varun1526",
		live: null
	},
	{
		title: "AWS Cost Optimization",
		description: "Implemented comprehensive AWS cost optimization strategy by analyzing and optimizing ECS task sizing, auto-scaling configurations, and resource utilization, achieving 20% cost savings.",
		image: "project6",
		tags: ["AWS", "Cost Optimization", "ECS", "Auto-scaling"],
		github: "https://github.com/varun1526",
		live: null
	}
